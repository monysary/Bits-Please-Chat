<div class="w-full max-w-sm p-4 bg-[#252627] border border-gray-200 rounded-lg shadow-md sm:p-6 md:p-8">
    <form class="space-y-6" action="#" id="signup-form">
        <h5 class="text-xl font-medium text-[#F2EFE9]">Create an Account</h5>
        <div>
            <label for="username" class="block mb-2 text-sm font-medium text-[#F2EFE9]">Username</label>
            <input type="text" name="username" id="signup-username" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 text-[#F2EFE9]" placeholder="username" required>
        </div>
        <div>
            <label for="email" class="block mb-2 text-sm font-medium text-[#F2EFE9]">Email</label>
            <input type="email" name="email" id="signup-email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 text-[#F2EFE9]" placeholder="email@email.com" required>
        </div>
        <div>
            <label for="password" class="block mb-2 text-sm font-medium text-[#F2EFE9]">Password</label>
            <input type="password" name="password" id="signup-password" placeholder="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 text-[#F2EFE9]" required>
            <span class="block mb-2 text-[12px] font-medium text-[#F2EFE9]">Password must be 8 characters long.</span>
        </div>
        <div>
            <label for="confirm-password" class="block mb-2 text-sm font-medium text-[#F2EFE9]">Confirm Password</label>
            <input type="password" name="confirm-password" id="confirm-password" placeholder="confirm password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 text-[#F2EFE9]" required>
        </div>
        <button type="submit" class="bg-[#904E55] w-full text-[#F2EFE9] hover:bg-[#564E58] focus:ring-4 focus:outline-none focus:ring-[#F2EFE9] font-medium rounded-lg text-sm px-5 py-2.5 text-center">Sign Up</button>
    </form>
</div>

<script src="./js/signup.js"></script>